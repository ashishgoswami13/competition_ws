<?xml version="1.0"?>
<launch>
    <!-- Line follower node only (assumes robot is already spawned) -->
    <arg name="image_topic" default="/camera/rgb/image_raw"/>
    <arg name="control_rate" default="10"/>
    
    <node name="line_follower" pkg="ainex_line_follower" type="line_follower_node.py" output="screen">
        <param name="image_topic" value="$(arg image_topic)"/>
        <param name="control_rate" value="$(arg control_rate)"/>
        <rosparam file="$(find ainex_line_follower)/config/line_follower_params.yaml" command="load"/>
    </node>
</launch>
